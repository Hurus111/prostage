<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ProStage Hugo Rivas{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{asset('/css/bootstrap.min.css')}}" rel="stylesheet">
            <link href="{{asset('/js/bootstrap.min.js')}}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <div class="row">
		    <div class="col-md-12">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="{{path('prostages_accueil')}}">ProStages</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    <div class="collapse navbar-collapse" id="navbarText">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link  {% block nav_item_accueil %}{% endblock %}" href="{{path('prostages_accueil')}}">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% block nav_item_entreprises %}{% endblock %}" href="{{path('prostages_entreprises')}}">Entreprises</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% block nav_item_formations %}{% endblock %}" href="{{path('prostages_formations')}}">Formations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% block nav_item_stages %}{% endblock %}" href="{{path('prostages_stagesListe')}}">Stages</a>
                            </li>

                            {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link {% block nav_item_ajouter_entreprise %}{% endblock %}" href="{{path('prostages_ajouterEntreprise')}}">Ajouter Entreprise</a>
                            </li>
                            {% endif %}

                            {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link {% block nav_item_ajouter_stage %}{% endblock %}" href="{{path('prostages_ajouterStage')}}">Ajouter Stage</a>
                            </li>
                            {% endif %}

                            {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{path('app_logout')}}">Se d√©connecter</a>
                            </li>
                            {% else %}
                            <li class="nav-item">
                                <a class="nav-link {% block nav_item_login %}{% endblock %}" href="{{path('app_login')}}">Se connecter</a>
                            </li>
                            {% endif %}

                            <li class="nav-item">
                                <a class="nav-link {% block nav_item_inscription %}{% endblock %}" href="{{path('app_inscription')}}">S'inscrire</a>
                            </li>

                            
                        </ul>
                
                    </div>
                    </div>
                </nav>
		    </div>
	        </div>
        {% endblock %}
        {% block menu %}
        {% endblock %}
        {% block body %}
        {% endblock %}
        {% block footer %}
            <div class="row">
		        <div class="col-md-12">
                    <div class="alert alert-dark" role="alert">
                        ProStage - Hugo Rivas
                    </div>
		        </div>
	        </div>
        {% endblock %}
        
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
