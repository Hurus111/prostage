{% extends 'base.html.twig' %}

{% block title %}Entreprises{% endblock %}

{% block body %}

<div class="container-fluid">
	<div class="row">
		<div class="card text-black bg-light mb-3"><h5 class="card-header">
			Liste des Entreprises
		</h5></div>
	</div>
	<div class="list-group">
		{% for ressourceCourante in ressourcesEntreprise %}
		<div class="list-group-item">
            <div class="card text-black bg-light mb-3">
                <h5 class="card-header">
					{{ressourceCourante.nom}}
				</h5>
				<div class="card-body">
					<p class="card-text">
						<strong>Adresse : </strong>{{ressourceCourante.adresse}}
					</p>
					<p class="card-text">
						<strong>Activite : </strong>{{ressourceCourante.activite}}
					</p>
					<p class="card-text">
						<strong>Siteweb : </strong>{{ressourceCourante.siteweb}}
					</p>
					<p class="btn">
						<a href="{{path('openclassdut_stages',{id:ressourceCourante.id})}}" target="_blank" class="btn btn-outline-dark">Filtrer</a>
					</p>
				</div>
			</div>
	    </div>
		{% endfor %}

	</div>
</div>
{% endblock %}
